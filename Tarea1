# Definir la matriz 3x3 con valores numéricos
matriz = [
    [1, 2, 3],
    [4, 5, 6],
    [7, 8, 9]
]

# Función para buscar un valor en la matriz
def buscar_valor(matriz, valor_buscado):
    # Iterar sobre las filas y columnas de la matriz
    for i in range(len(matriz)):
        for j in range(len(matriz[i])):
            if matriz[i][j] == valor_buscado:
                return (i, j)  # Retorna la posición (fila, columna) si se encuentra el valor
    return None  # Retorna None si el valor no se encuentra

# Definir el valor que se desea buscar
valor_buscado = 5

# Llamar a la función de búsqueda
posicion = buscar_valor(matriz, valor_buscado)

# Mostrar el resultado
if posicion:
    print(f"Valor {valor_buscado} encontrado en la posición: {posicion}")
else:
    print(f"Valor {valor_buscado} no encontrado en la matriz.")
